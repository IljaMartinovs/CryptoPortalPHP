{% extends 'navLayout.twig' %}
{% block content %}
<div class="flex justify-center items-center mb-6">
    <div class="flex justify-center items-center mb-6">
        <div class="form-group form-check">
            {% if errors %}
                {% for error in errors %}
                    <p class="font-semi-bold text-red-600 capitalize lg:text-1xl ml-3">
                        X {{ error }}
                    </p>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
    <div class="flex justify-center items-center mb-6">
        <div class="flex justify-center items-center mb-6">
            <div class="form-group form-check">
                {% if success  %}
                    {% for suc in success %}
                        <p class="font-semi-bold text-green-600 capitalize lg:text-1xl ml-3">
                            X {{ suc }}
                        </p>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

<div class="w-full">
    <table class="mx-auto">
        <thead>
        <tr class="bg-gray-800 text-left font-bold text-white">
            <th class="px-4 py-2">Logo</th>
            <th class="px-4 py-2">Cryptocurrency</th>
            <th class="px-4 py-2">Symbol</th>
            <th class="px-4 py-2">Price</th>
            <th class="px-4 py-2">Change (1h)</th>
            <th class="px-4 py-2">Change (24h)</th>
            <th class="px-4 py-2">Change (7d)</th>
        </tr>
        </thead>
        <tbody>
        {% for cryptoCurrency in cryptoCurrencies %}
        <tr class="border-t">
            <td class="px-4 py-2">
                <img width="32" src="{{ cryptoCurrency.logoURL }}" alt="logo" class="img-fluid mx-auto d-block">
            </td>
            <td class="text-left px-4 py-2">
                <a href="?crypto={{ cryptoCurrency.symbols }}"><u>{{ cryptoCurrency.name }}</u></a></td>
            <td class="px-4 py-2">{{ cryptoCurrency.symbols }}</td>
            <td class="px-4 py-2">{{ cryptoCurrency.price|number_format(2) }}$</td>
            <td class="px-4 py-2 text-green-500">
                <span class="{% if cryptoCurrency.percentChange1h < 0 %}text-red-600{% else %}text-green-600{% endif %}">
                           {{ cryptoCurrency.percentChange1h|number_format(2) }}% </span>
            </td>
            <td class="px-4 py-2 text-green-500">
                <span class="{% if cryptoCurrency.percentChange24h < 0 %}text-red-600{% else %}text-green-600{% endif %}">
                           {{ cryptoCurrency.percentChange1h|number_format(2) }}% </span>
            </td>
            <td class="px-4 py-2 text-green-500">
                <span class="{% if cryptoCurrency.percentChange7d < 0 %}text-red-600{% else %}text-green-600{% endif %}">
                           {{ cryptoCurrency.percentChange1h|number_format(2) }}% </span>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
